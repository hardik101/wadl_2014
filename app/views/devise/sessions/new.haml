%h2= @page_title = 'Sign In'
%br

= simple_form_for Member.new, :url => member_session_path, html: {class: 'form-horizontal col-md-5', id: 'sign_in'} do |f|
  = f.error_notification
  =devise_error_messages!
  = f.input_field :email, type: 'email', pattern: '[^@]*@[^@]*', class: 'form-control', required: true, placeholder: 'E-Mail'
  = f.input_field :password, class: 'form-control ', required: true, placeholder: 'Password'

  .input-group
    
    %span.input-group-btn
      %input.btn.btn-primary{type: 'submit', value: 'Sign In' ,:class => 'col-sm-5'}

= render 'devise/shared/links'

