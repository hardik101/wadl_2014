%h2= @page_title = current_member.firstname + "'s Account"


- unless resource.confirmed?
  .alert.alert-danger Your account is not yet confirmed!


= simple_form_for resource, url: registration_path(resource_name), html: {class: 'form-horizontal wow' } do|f|
  
  = f.input :email, :required => true, :autofocus => true
  = f.input :firstname
  = f.input :lastname
  = f.input :password, :required => false, :input_html => {:autocomplete => "off"}, :hint => "leave blank if you don't want to change it"
  = f.input :password_confirmation, :required => false
  = f.input :current_password, :required => true, :hint => "Enter current password to confirm your changes"
  = f.label :Diet_preferance
  = f.select :diet_pref, Member::DIET_PREF ,:prompt => "Select a diet preferance", :required => true
  = f.label :Role
  = f.select :role, Member::ROLE,:prompt => "Change Role",:required => true
  = f.input :academic_institution,:required => false

  = f.button :submit, 'Update'

= render 'devise/shared/links'









