%h2= @page_title = 'Register for WADT-2014'

= simple_form_for resource, url: registration_path(resource_name), html: {class: 'form-horizontal col-md-4 wow'} do |f|
  
  = f.input :email,:required => true, autofocus: true
  = f.input :firstname, :required => true
  = f.input :lastname, :required => true
  = f.input :password
  = f.input :password_confirmation, required: true
  = f.label :Role
  = f.select :role, Member::ROLE,:prompt=>"Select your role", :required => true,:selected => Member::ROLE[2] 
  
  //= f.check_box :grant
  //= f.label :grant, "apply for Grant (for Students)"
  
  
 
  .br
  = f.label :Diet_preferance
  = f.select :diet_pref, Member::DIET_PREF ,:prompt => "Select a diet preferance", :required => true
  = f.text_area :diet_msg, :id => "message_area", :cols => 34, :rows => 3 ,:placeholder => "Please specify if you have some dietary restriction or allergies"
  = f.input :academic_institution,:placeholder => "Optional"
  = f.button :submit, 'Register',:class=>"btn btn-primary"

= render 'devise/shared/links'

