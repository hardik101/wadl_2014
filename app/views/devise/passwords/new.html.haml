%h2 Forgot your password?
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post ,:class => 'form-horizontal col-md-5'}) do |f|
  = f.error_notification
  .form-inputs
    = f.input_field :email,:required => true, :autofocus => true,type: 'email', pattern: '[^@]*@[^@]*', class: 'form-control',placeholder: 'E-Mail'
  .form-actions
    = f.button :submit,"Send me reset password instructions",:class=>"btn btn-primary col-sm-7"
= render "devise/shared/links"
